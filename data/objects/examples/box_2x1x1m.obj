v -1.0 -0.5 -0.5
v  1.0 -0.5 -0.5
v  1.0  0.5 -0.5
v -1.0  0.5 -0.5
v -1.0 -0.5  0.5
v  1.0 -0.5  0.5
v  1.0  0.5  0.5
v -1.0  0.5  0.5

# Vertex normals
vn  0.0  0.0 -1.0
vn  0.0  0.0  1.0
vn  0.0 -1.0  0.0
vn  0.0  1.0  0.0
vn -1.0  0.0  0.0
vn  1.0  0.0  0.0

